@model IEnumerable<CarouselForBooksApplication.Models.Order>

@{
    ViewData["Title"] = "Past Orders";
}

<h2>Past Orders</h2>

@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date Ordered</th>
                <th>Title</th>
                <th class="text-right">Quantity</th>
                <th class="text-right">Cost</th>
                <th class="text-right">Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.DateOrdered)</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                @foreach (var item1 in item.OrderItems)
                {
                    <tr>
                        <td></td>
                        <td>@Html.DisplayFor(modelItem => item1.Book.Title)</td>
                        <td class="text-right">@Html.DisplayFor(modelItem => item1.Quantity)</td>
                        <td class="text-right">@Html.DisplayFor(modelItem => item1.Book.Cost)</td>
                        <td class="text-right">@string.Format("{0:C}", item1.Book.Cost * item1.Quantity)</td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="text-right"><b>@Html.DisplayNameFor(model => model.TotalCost)</b> &nbsp; @Html.DisplayFor(model => item.TotalCost)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>No orders were placed</h3>
}