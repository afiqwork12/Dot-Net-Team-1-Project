@model CarouselForBooksApplication.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<h2>Order Confirmation</h2>

<form action="OrderConfirmationPage" method="post">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.DateOrdered)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateOrdered)
            </dd>
            <dt>
            </dt>
            <dd>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Quantity</th>
                            <th>Cost</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Book.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                <td>@Html.DisplayFor(modelItem => item.Book.Cost)</td>
                                <td class="text-right">@string.Format("{0:C}", item.Book.Cost * item.Quantity)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>
            <dt>

            </dt>
            <dd class="text-right">
                <b>@Html.DisplayNameFor(model => model.TotalCost)</b> @Html.DisplayFor(model => model.TotalCost)
            </dd>
        </dl>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-success">Confirm Order</button>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-primary">Back to Cart</a>
    </div>
</form>
