@model IEnumerable<CarouselForBooksApplication.Models.Cart>

@{
    ViewData["Title"] = "Index";
}
<partial name="_MessagePartial" />
<h2>Cart</h2>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.TotalCost)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img class="card-img-top" src="@Url.Content(item.Book.Picture)" alt="Card image cap" height="150" width="150">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.Cost)
                    </td>
                    <td>
                        <a class="btn btn-default" asp-action="Increase" asp-route-CartId="@item.CartId"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                        @Html.DisplayFor(modelItem => item.Quantity)
                        <a class="btn btn-default" asp-action="Decrease" asp-route-CartId="@item.CartId"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></a>
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.TotalCost)
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="text-right">Total: @string.Format("{0:C}", Model.Sum(m => m.TotalCost))</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="text-right"><a class="btn btn-success" asp-action="ConfirmOrder">Confirm Order</a></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="text-right"><a class="btn btn-danger" asp-action="Delete">Clear Cart</a></td>
            </tr>
        </tbody>
    </table>
}
else
{
    <h3>Please add some books to the cart</h3>
}

