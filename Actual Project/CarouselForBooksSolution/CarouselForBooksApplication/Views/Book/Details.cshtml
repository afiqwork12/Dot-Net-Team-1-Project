@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@model CarouselForBooksApplication.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Language)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Language)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd>
            <img src="@Url.Content(Model.Picture)" alt="Card image cap" height="400" width="300">
        </dd>
    </dl>
</div>
<div>
    @if (@HttpContextAccessor.HttpContext.Session.GetString("role") != null)
    {
        @if (@HttpContextAccessor.HttpContext.Session.GetString("role") == "admin")
        {
            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
        else
        {
            <a class="btn btn-success" asp-action="AddToCart" asp-route-id="@Model.Id">Add to Cart</a>
        }
    }
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
