@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@model CarouselForBooksApplication.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <img src="@Url.Content(Model.Picture)" alt="@Html.DisplayNameFor(model => model.Picture)" height="400" width="300">
                </td>
                <td>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd>
                            <b>@Html.DisplayFor(model => model.Title)</b>
                            <hr />
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Author)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Author)
                            <hr />
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Description)
                            <hr />
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Language)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Language)
                            <hr />
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Cost)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Cost)
                            <hr />
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Genres)
                        </dt>
                        <dd>
                            @string.Join(", ", Model.Genres.Select(g => g.Name).ToList())
                            <hr />
                        </dd>
                        @*<dt>
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd>
            <img src="@Url.Content(Model.Picture)" alt="Card image cap" height="400" width="300">
        </dd>*@
                    </dl>
                </td>
            </tr>
        </tbody>
    </table>
    
</div>
<div class="text-right">
    @if (@HttpContextAccessor.HttpContext.Session.GetString("role") != null)
    {
        @if (@HttpContextAccessor.HttpContext.Session.GetString("role") == "admin")
        {
            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
        else
        {
            <a class="btn btn-success" asp-action="AddToCart" asp-route-id="@Model.Id">Add to Cart</a>
        }
    }
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
