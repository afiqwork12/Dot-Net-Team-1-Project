@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<CarouselForBooksApplication.Models.Book>

<style>
    #divCard {
        position: relative;
        float: left;
        margin: 10px;
    }
</style>
<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
    </symbol>
    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
    </symbol>
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>
@if (@HttpContextAccessor.HttpContext.Session.GetString("message") != null)
{
    if (@HttpContextAccessor.HttpContext.Session.GetString("message") != "")
    {
        <br />
        string message = @HttpContextAccessor.HttpContext.Session.GetString("message");
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @message
        </div>
        HttpContextAccessor.HttpContext.Session.SetString("message", "");
    }
}
<h1>Book Listings</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div id="divCard" class="card" style="border:double 3px; padding: 3px; border-radius: 2px;">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img class="card-img-top" src="@Url.Content(item.Picture)" alt="Card image cap" height="350" width="250">
                </a>
                <div class="card-body">
                    <h5 class="card-title"><b>@item.Title</b></h5>

                    <div class="card-footer">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("role") != null)
                        {
                            @if (HttpContextAccessor.HttpContext.Session.GetString("role") == "admin")
                            {
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>@:&nbsp;
                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">View Details</a>@:&nbsp;
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            }
                            else
                            {
                                <a class="btn btn-primary" asp-action="AddToCart" asp-route-id="@item.Id">Add To Cart</a>
                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">View Details</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>